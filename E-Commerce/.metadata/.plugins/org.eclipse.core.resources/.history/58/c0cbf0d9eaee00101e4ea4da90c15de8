package in.mk.cart.service.impl;

import java.util.ArrayList;
import java.util.List;

import org.springframework.security.access.prepost.PreAuthorize;
import org.springframework.stereotype.Service;

import in.mk.cart.dto.AddToCartRequest;
import in.mk.cart.dto.CartItemResponse;
import in.mk.cart.dto.CartResponse;
import in.mk.cart.entity.Cart;
import in.mk.cart.entity.CartItem;
import in.mk.cart.repository.CartRepository;
import in.mk.cart.service.CartService;
import jakarta.transaction.Transactional;
import lombok.RequiredArgsConstructor;

@Service
@RequiredArgsConstructor
@Transactional
public class CartServiceImpl implements CartService {

    private final CartRepository cartRepository;

    @Override
    @PreAuthorize("hasRole('USER')")
    public void addToCart(String user, AddToCartRequest request) {

        Cart cart = cartRepository.findByUserEmail(user)
                .orElseGet(() -> cartRepository.save(new Cart(null, user, new ArrayList<>())));

        cart.getItems().add(
            new CartItem(null, request.getProductId(), request.getQuantity(), cart)
        );

        cartRepository.save(cart);
    }

    @Override
    @PreAuthorize("hasRole('USER')")
    public CartResponse viewCart(String user) {

        Cart cart = cartRepository.findByUserEmail(user)
                .orElseThrow(() -> new RuntimeException("Cart empty"));

        List<CartItemResponse> items = cart.getItems()
                .stream()
                .map(i -> new CartItemResponse(i.getProductId(), i.getQuantity()))
                .toList();

        return new CartResponse(user, items);
    }

    @Override
    @PreAuthorize("hasRole('USER')")
    public void removeItem(String user, Long productId) {
        Cart cart = cartRepository.findByUserEmail(user).orElseThrow();
        cart.getItems().removeIf(i -> i.getProductId().equals(productId));
    }

    @Override
    @PreAuthorize("hasRole('USER')")
    public void clearCart(String user) {
        Cart cart = cartRepository.findByUserEmail(user).orElseThrow();
        cart.getItems().clear();
    }
}
